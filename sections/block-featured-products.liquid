{% render 'featured-product-grid', settings: section.settings, nested: false %}

{% schema %}
{
  "name": "t:sections.block-featured-products.name",
  "tag": "section",
  "class": "a-bg-default",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Featured Books",
      "label": "t:sections.block-featured-products.settings.heading.label",
    },
    {
      "type": "header",
      "content": "t:sections.block-featured-products.settings.header__0.content",
      "info": "t:sections.block-featured-products.settings.header__0.info"
    },
    {
      "type": "url",
      "id": "browse_url",
      "label": "t:sections.block-featured-products.settings.browse_url.label",
    },
    {
      "type": "text",
      "id": "browse_text",
      "default": "Browse all",
      "label": "t:sections.block-featured-products.settings.browse_text.label",
    },
    {
      "type": "header",
      "content": "t:sections.block-featured-products.settings.header__1.content"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:sections.block-featured-products.settings.menu.label"
    },
    {
      "type": "header",
      "content": "t:sections.block-featured-products.settings.header__2.content"
    },
    {
      "type": "paragraph",
      "content": "t:sections.block-featured-products.settings.paragraph__2.content"
    },
    {
      "type": "product_list",
      "id": "product_list",
      "label": "t:sections.block-featured-products.settings.product_list.label",
      "limit": 6
    }
  ],
  "presets": [
    {
      "name": "t:sections.block-featured-products.presets.name"
    }
  ]
}
{% endschema %}
