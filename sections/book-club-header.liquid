<div class="c-book-club-header l-container l-container--max">
  <div class="c-book-club-header__title-block">
    <h1 class="sr-only">
      {%- if section.settings.page_title -%}
        {{ section.settings.page_title }}
      {%- else -%}
        {{ 'sections.book-club-header.default_page_title' | t }}
      {%- endif -%}
    </h1>
    {%- if customer -%}
      <p class="c-book-club-header__existing-customer-prompt">
        {{ 'sections.book-club-header.existing_customer_prompt_html' | t: link_url: '/tools/recurring/login/' }}
      </p>
    {%- endif -%}
    <div class="c-book-club-header__title">
      {% render 'icon-verso-logo-mark', classname: 'c-book-club-header__verso-logo' %}
      {% assign product = settings.book_club_page_header_product %}
      {%- if product != blank -%}
        <img
          srcset="
            {{ product.featured_media | image_url: width: 400 }} 2x,
            {{ product.featured_media | image_url: width: 200 }} 1x
          "
          src="{{ product.featured_media | image_url: width: 200 }}"
          alt="{{ product.featured_media.alt | escape }}"
          loading="lazy"
          width="100"
          height="{{ 100 | divided_by: product.featured_media.aspect_ratio | round }}"
          class="c-book-club-header__image"
          aria-hidden="true"
        >
      {%- endif -%}
      {% render 'icon-book-club-logo-type', classname: 'c-book-club-header__book-club-logo' %}
    </div>
  </div>
  {%- if settings.book_club_page_header_text != blank or section.settings.cta_text != blank -%}
    <div class="c-book-club-header__body-block">
      {%- if settings.book_club_page_header_text != blank -%}
        <div class="c-book-club-header__intro t-rte">{{ settings.book_club_page_header_text }}</div>
      {%- endif -%}
      {%- if section.settings.cta_text != blank -%}
        <div class="c-book-club-header__cta">
          {% render 'image-text-cta', image_filename: 'book-club-icon-4', heading: section.settings.cta_text %}
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.book-club-header.name",
  "tag": "header",
  "class": "a-bg-accent-secondary-light",
  "settings": [
    {
      "type": "text",
      "id": "page_title",
      "label": "t:sections.book-club-header.settings.page_title.label",
      "info": "t:sections.book-club-header.settings.page_title.info"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "t:sections.book-club-header.settings.cta_text.label"
    },
    {
      "type": "paragraph",
      "content": "t:sections.book-club-header.settings.paragraph__1.content"
    }
  ]
}
{% endschema %}
