{% liquid
if customer.default_address.id == address.id
  assign is_default = true
else
  assign is_default = false
endif %}
<div class="c-form c-addresses__form">
  <div class="{{ classname }} c-form__section c-form__section--inputs">
    <div class="a-input-wrapper">
      <input
        type="text"
        id="AddressFirstName_{{ form_id }}"
        name="address[first_name]"
        value="{{ form.first_name }}"
        autocomplete="given-name">
      <label for="AddressFirstName_{{ form_id }}">{{ 'customer.addresses.first_name' | t }}</label>
    </div>
    <div class="a-input-wrapper">
      <input
        type="text"
        id="AddressLastName_{{ form_id }}"
        name="address[last_name]"
        value="{{ form.last_name }}"
        autocomplete="family-name">
      <label for="AddressLastName_{{ form_id }}">{{ 'customer.addresses.last_name' | t }}</label>
    </div>
    <div class="a-input-wrapper">
      <input
        type="text"
        id="AddressCompany_{{ form_id }}"
        name="address[company]"
        value="{{ form.company }}"
        autocomplete="organization">
      <label for="AddressCompany_{{ form_id }}">{{ 'customer.addresses.company' | t }}</label>
    </div>
    <div class="a-input-wrapper">
      <input
        type="text"
        id="AddressAddress1_{{ form_id }}"
        name="address[address1]"
        value="{{ form.address1 }}"
        autocomplete="address-line1">
      <label for="AddressAddress1_{{ form_id }}">{{ 'customer.addresses.address1' | t }}</label>
    </div>
    <div class="a-input-wrapper">
      <input
        type="text"
        id="AddressAddress2_{{ form_id }}"
        name="address[address2]"
        value="{{ form.address2 }}"
        autocomplete="address-line2">
      <label for="AddressAddress2_{{ form_id }}">{{ 'customer.addresses.address2' | t }}</label>
    </div>
    <div class="a-input-wrapper">
      <input
        type="text"
        id="AddressCity_{{ form_id }}"
        name="address[city]"
        value="{{ form.city }}"
        autocomplete="address-level2">
      <label for="AddressCity_{{ form_id }}">{{ 'customer.addresses.city' | t }}</label>
    </div>

    <div class="a-input-wrapper">
      <label for="AddressCountry_{{ form_id }}">
        {{ 'customer.addresses.country' | t }}
      </label>
      <div class="c-addresses__select-wrapper">
        <select
          id="AddressCountry_{{ form_id }}"
          name="address[country]"
          data-address-country-select
          data-default="{{ form.country }}"
          data-form-id="{{ form_id }}"
          autocomplete="country">
          {{ all_country_option_tags }}
        </select>
        <div class="c-addresses__caret">
          {% render 'icon-select' aria-hidden: "true" %}
        </div>
      </div>
    </div>

    <div
      id="AddressProvinceContainer_{{ form_id }}"
      style="display:none;"
      class="a-input-wrapper">
      <label for="AddressProvince_{{ form_id }}">
        {{ 'customer.addresses.province' | t }}
      </label>
      <div class="c-addresses__select-wrapper" focusable="true">
        <select
          id="AddressProvince_{{ form_id }}"
          name="address[province]"
          data-default="{{ form.province }}"
          autocomplete="address-level1"></select>
        <div class="c-addresses__caret" focusable="true">
          {% render 'icon-select' aria-hidden: "true" %}
        </div>
      </div>
    </div>
    <div class="a-input-wrapper">
      <input
        type="text"
        id="AddressZip_{{ form_id }}"
        name="address[zip]"
        value="{{ form.zip }}"
        autocapitalize="characters"
        autocomplete="postal-code">
      <label for="AddressZip_{{ form_id }}">{{ 'customer.addresses.zip' | t }}</label>
    </div>
    {% if is_default == false %}
      <div class="c-addresses__default">
        {{ form.set_as_default_checkbox }}
        <label for="address_default_address_{{ form_id }}">
          {{ 'customer.addresses.set_default' | t }}
        </label>
      </div>
    {% endif %}
    <div class="c-addresses__submit-cancel-block">
      {% if form_id == "new" %}
        <button class="c-button c-button--medium c-button--filled">{{ 'customer.addresses.add' | t }}</button>
      {% else %}
        <button class="c-button c-button--medium c-button--filled">{{ 'customer.addresses.update' | t }}</button>
      {% endif %}
      <button
        data-toggle-id="EditFormButton_{{ address.id | default: "new" }}"
        aria-controls="AddAddress"
        type="reset"
        class="text-sm c-addresses__edit-text">{{ 'customer.addresses.cancel' | t }}</button>
    </div>
  </div>
</div>