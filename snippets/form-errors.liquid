{%- style -%}
  .errors ul {
    list-style: revert;
    padding: revert;
  }
{%- endstyle -%}

{%- if form.errors -%}
  <div class="c-form__section text-accent text-sm">
    <p tabindex="-1" autofocus class="a-no-outline">
      <span class="sr-only">{{ 'accessibility.error' | t }}</span>
      {{ 'templates.contact.form.error_heading' | t }}
    </p>
    <div class="errors">
      <ul>
        {%- for field in form.errors -%}
          <li>
            {%- if field == 'form' -%}
              {{ form.errors.messages[field] }}
            {%- else -%}
              <a href="#{{ input_id_prefix }}{{ field }}">
                {{ form.errors.translated_fields[field] | capitalize }}
                {{ form.errors.messages[field] }}
              </a>
            {%- endif -%}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
{%- endif -%}
